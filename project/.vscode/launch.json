{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "node",
            "runtimeVersion": "20.11.1",
            "runtimeExecutable": "npm",
            "request": "launch",
            "sourceMaps": true,
            "runtimeArgs": [
                "run",
                "run:debug"
            ],
            "outFiles": [
                "!**/node_modules/**"
            ],
            "cwd": "${workspaceFolder}",
            "outputCapture": "std"
        },
        {
            "name": "Run Vitest Tests",
            "type": "node",
            "runtimeVersion": "20.11.1",
            "runtimeExecutable": "npm",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "test"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
